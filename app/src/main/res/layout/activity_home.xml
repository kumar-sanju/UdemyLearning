<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fading Animation"
            android:gravity="center"
            />
        <Button
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fading Animation"
            android:gravity="center"
            />
        <Button
            android:id="@+id/fadebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fading Animation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Creating"
            android:gravity="center"
            />
        <Button
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Creating"
            android:gravity="center"
            />
        <Button
            android:id="@+id/audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridLayout Creating"
            android:gravity="center"
            />
        <Button
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridLayout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Video Creating"
            android:gravity="center"
            />
        <Button
            android:id="@+id/swipeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Video"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List view Creating"
            android:gravity="center"
            />
        <Button
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Animation"
            android:gravity="center"
            />
        <Button
            android:id="@+id/sharedAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Animation"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download web content"
            android:gravity="center"
            />
        <Button
            android:id="@+id/downloadWebConntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download web content"
            />
    </LinearLayout>

</ScrollView>